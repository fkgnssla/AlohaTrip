<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.dao.LikeMapper">

	<select id="createLike" parameterType="likeDto">
		insert into like values (null, #{memberId}, #{hotPlaceId})
	</select>
	
	<delete id="deleteLike" parameterType="likeDto">
		delete from like where member_id = #{memberId} and hotPlace_id = #{hotPlaceId}
	</delete>

</mapper>